@model LivroModel

@{
    ViewData["Title"] = "Excluir livro";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-danger">Excluir livro</h1>
    </div>

    <form class="p-4 bg-white rounded shadow-sm text-center" asp-controller="Livro" asp-action="Deletar" method="post">
        <h4 class="mb-4">Realmente deseja deletar <strong>@Model.Titulo</strong>?</h4>

        <input type="hidden" asp-for="Id">

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger">Confirmar</button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Livro">Voltar</a>
        </div>
    </form>
</div>
