@model LivroModel
@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="container py-5" style="max-width: 700px;">
    <div class="text-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #800000;">Excluir Livro</h1>
    </div>

    <form class="p-4 rounded shadow text-center" asp-controller="Livro" asp-action="Deletar" method="post" style="background-color: #e8d5b7;">
        <input type="hidden" asp-for="Id" />

        <p style="color: #4d3d2f;">Deseja realmente excluir o livro <strong>@Model.Titulo</strong>?</p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn" style="background-color: #800000; color: #fdf6e3;">Confirmar</button>
            <a class="btn" asp-action="Index" asp-controller="Livro" style="background-color: #2c3e50; color: #fdf6e3;">Voltar</a>
        </div>
    </form>
</div>
