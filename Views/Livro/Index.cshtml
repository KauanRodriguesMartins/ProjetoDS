@model List<LivroModel>
@{
    ViewData["Title"] = "Lista de livros";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #2c3e50;">Lista de Livros</h1>
        <a class="btn" asp-controller="Livro" asp-action="Adicionar" style="background-color: #2c3e50; color: #fdf6e3;">Adicionar</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped shadow rounded" style="background-color: #e8d5b7;">
            <thead style="background-color: #2c3e50; color: #fdf6e3;">
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Ano</th>
                    <th>Gênero</th>
                    <th>Qtd disponível</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody style="color: #4d3d2f;">
                @foreach(var livro in Model){
                    <tr>
                        <td>@livro.Id</td>
                        <td>@livro.Titulo</td>
                        <td>@livro.Autor</td>
                        <td>@livro.AnoPublicacao</td>
                        <td>@livro.Genero</td>
                        <td>@livro.QuantidadeDisponivel</td>
                        <td>@livro.Status</td>
                        <td>
                            <a class="btn btn-warning btn-sm me-1" asp-action="Editar" asp-route-id="@livro.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@livro.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
