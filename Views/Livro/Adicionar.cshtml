@model LivroModel

@{
    ViewData["Title"] = "Adicionar livro";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">Adicionar livro</h1>
    </div>

    <form class="p-4 bg-white rounded shadow-sm" asp-controller="Livro" asp-action="Criar" method="post">
        <div class="mb-3">
            <label class="form-label">Título do livro</label>
            <input type="text" asp-for="Titulo" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Autor</label>
            <input type="text" asp-for="Autor" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Ano de publicação</label>
            <input type="number" asp-for="AnoPublicacao" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Gênero</label>
            <input type="text" asp-for="Genero" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Quantidade disponível</label>
            <input type="number" asp-for="QuantidadeDisponivel" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <input type="text" asp-for="Status" class="form-control">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Confirmar</button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Livro">Voltar</a>
        </div>
    </form>
</div>
