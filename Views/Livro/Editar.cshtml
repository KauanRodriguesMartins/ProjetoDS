@model LivroModel

@{
    ViewData["Title"] = "Editar Livro";
}

<div class="text-center">
    <h1 class="display-4">Editar Livro</h1>
</div>

<form class="mt-4 p-3" asp-controller="Livro" asp-action="Atualizar" method="post">
  <div class="mb-3">
    <label for="exampleInputTitleBook" class="form-label">Titulo do livro</label>
    <input type="text" asp-for="Titulo" class="form-control" id="exampleInputTitleBook">
  </div>

  <div class="mb-3">
    <label for="exampleInputAutor" class="form-label">Autor</label>
    <input type="text" asp-for="Autor" class="form-control" id="exampleInputAutor">
  </div>

  <div class="mb-3">
    <label for="exampleInputAP" class="form-label">Ano de publicação</label>
    <input type="number" asp-for="AnoPublicacao" class="form-control" id="exampleInputAP">
  </div>

  <div class="mb-3">
    <label for="exampleInputG" class="form-label">Gênero</label>
    <input type="text" asp-for="Genero" class="form-control" id="exampleInputG">
  </div>

  <div class="mb-3">
    <label for="exampleInputQD" class="form-label">Quantidade disponível</label>
    <input type="number" asp-for="QuantidadeDisponivel" class="form-control" id="exampleInputQD">
  </div>

   <div class="mb-3">
    <label for="exampleInputStatus" class="form-label">Status</label>
    <input type="text" asp-for="Status" class="form-control" id="exampleInputStatus">
  </div>


  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
    <button type="submit" class="btn btn-success">Confirmar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Livro">Voltar</a>
    <input type="hidden" asp-for="Id">
</form>