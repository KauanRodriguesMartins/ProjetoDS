@model LivroModel
@{
    ViewData["Title"] = "Editar Livro";
}

<div class="container py-5" style="max-width: 700px;">
    <div class="text-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #2c3e50;">Editar Livro</h1>
    </div>

    <form class="p-4 rounded shadow" asp-controller="Livro" asp-action="Atualizar" method="post" style="background-color: #e8d5b7;">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Título do livro</label>
            <input type="text" asp-for="Titulo" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Autor</label>
            <input type="text" asp-for="Autor" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Ano de publicação</label>
            <input type="number" asp-for="AnoPublicacao" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Gênero</label>
            <input type="text" asp-for="Genero" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Quantidade disponível</label>
            <input type="number" asp-for="QuantidadeDisponivel" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight: bold; color: #4d3d2f;">Status</label>
            <input type="text" asp-for="Status" class="form-control">
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn" style="background-color: #2c3e50; color: #fdf6e3;">Confirmar</button>
            <a class="btn" asp-action="Index" asp-controller="Livro" style="background-color: #800000; color: #fdf6e3;">Voltar</a>
        </div>
    </form>
</div>
