@model UsuarioModel

@{
    ViewData["Title"] = "Editar usuario";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">Editar usuário</h1>
    </div>

    <form class="p-4 bg-white rounded shadow-sm" asp-controller="Usuario" asp-action="Atualizar">
        <div class="mb-3">
            <label class="form-label">Nome do usuário</label>
            <input type="text" asp-for="Nome" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">CPF</label>
            <input type="text" asp-for="CPF" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Idade</label>
            <input type="number" asp-for="Idade" class="form-control">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>

        <input type="hidden" asp-for="Id">

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Confirmar</button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Usuario">Voltar</a>
        </div>
    </form>
</div>
