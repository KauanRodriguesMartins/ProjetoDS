@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container py-5" style="max-width: 700px;">
    <div class="text-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #2c3e50;">Editar Usuário</h1>
    </div>

    <form class="p-4 rounded shadow" asp-controller="Usuario" asp-action="Atualizar" style="background-color: #e8d5b7;">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Nome do Usuário</label>
            <input type="text" asp-for="Nome" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">CPF</label>
            <input type="text" asp-for="CPF" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Idade</label>
            <input type="number" asp-for="Idade" class="form-control">
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn" style="background-color: #2c3e50; color: #fdf6e3;">Confirmar</button>
            <a class="btn" asp-action="Index" asp-controller="Usuario" style="background-color: #800000; color: #fdf6e3;">Voltar</a>
        </div>
    </form>
</div>
