@{
    ViewData["Title"] = "Editar usuario";
}

<div class="text-center">
    <h1 class="display-4">Editar usuario</h1>
</div>

<form class="mt-4 p-3">
  <div class="mb-3">
    <label for="exampleInputTitleBook" class="form-label">Nome do usuario</label>
    <input type="text" class="form-control" id="exampleInputTitleBook" aria-describedby="emailHelp">
  </div>

  <div class="mb-3">
    <label for="exampleInputAutor" class="form-label">Cpf</label>
    <input type="text" class="form-control" id="exampleInputAutor">
  </div>

  <div class="mb-3">
    <label for="exampleInputPages" class="form-label">Idade</label>
    <input type="number" class="form-control" id="exampleInputPages">
  </div>

  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-success">Confirmar</button>
  <a class="btn btn-secondary" asp-action="Index" asp-controller="Usuario">Voltar</a>
</form>