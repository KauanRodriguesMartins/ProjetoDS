@model List<UsuarioModel>

@{
    ViewData["Title"] = "Lista de usuario";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">Lista de usuários</h1>
        <a class="btn btn-success" asp-controller="Usuario" asp-action="Adicionar">Adicionar</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm bg-white rounded">
            <thead class="table-light">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Idade</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
            @if(Model != null && Model.Any()){
                foreach(UsuarioModel usuario in Model){    
                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.Nome</td>
                    <td>@usuario.CPF</td>
                    <td>@usuario.Idade</td>
                    <td>
                        <a class="btn btn-warning btn-sm me-1" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                        <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@usuario.Id">Excluir</a>
                    </td>
                </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
