@model List<UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #2c3e50;">Lista de Usuários</h1>
        <a class="btn" asp-controller="Usuario" asp-action="Adicionar" style="background-color: #2c3e50; color: #fdf6e3;">Adicionar</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped shadow rounded" style="background-color: #e8d5b7;">
            <thead style="background-color: #2c3e50; color: #fdf6e3;">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Idade</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody style="color: #4d3d2f;">
                @if(Model != null && Model.Any()){
                    foreach(UsuarioModel usuario in Model){    
                        <tr>
                            <td>@usuario.Id</td>
                            <td>@usuario.Nome</td>
                            <td>@usuario.CPF</td>
                            <td>@usuario.Idade</td>
                            <td>
                                <a class="btn btn-warning btn-sm me-1" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                                <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@usuario.Id">Excluir</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
