@model EmprestimoModel

@{
    ViewData["Title"] = "Excluir Empréstimo";
}

<div class="text-center">
    <h1 class="display-4">Excluir Empréstimo</h1>
</div>

<form asp-action="Deletar" method="post" class="mt-4 p-3">

    <input type="hidden" asp-for="Id" />

    <p>
        Tem certeza que deseja excluir o empréstimo do livro
        <strong>@Model.Livro.Titulo</strong>
        para o usuário
        <strong>@Model.Usuario.Nome</strong>?
    </p>

    <p>
        Data do empréstimo:
        <strong>@Model.DataEmprestimo.ToShortDateString()</strong>
    </p>

    <p>
        Data de devolução:
        <strong>@(Model.DataDevolucao?.ToShortDateString() ?? "Em aberto")</strong>
    </p>

    <button type="submit" class="btn btn-danger">Confirmar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
