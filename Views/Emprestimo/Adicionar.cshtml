@model EmprestimoModel

@{
    ViewData["Title"] = "Novo Empréstimo";
}

<h1>Novo Empréstimo</h1>

<form class="mt-4 p-3" asp-action="Criar" method="post">

    <div class="mb-3">
        <label class="form-label">Livro</label>
        <select asp-for="LivroId" class="form-control">
            <option value="">Selecione um livro</option>
            @foreach (var livro in ViewBag.Livros)
            {
                <option value="@livro.Id">@livro.Titulo</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <select asp-for="UsuarioId" class="form-control">
            <option value="">Selecione um usuário</option>
            @foreach (var usuario in ViewBag.Usuarios)
            {
                <option value="@usuario.Id">@usuario.Nome</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Data do Empréstimo</label>
        <input type="date" asp-for="DataEmprestimo" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Data de Devolução</label>
        <input type="date" asp-for="DataDevolucao" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>

</form>
