@model List<EmprestimoModel>

<h1>Empréstimos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Livro</th>
            <th>Usuário</th>
            <th>Data Empréstimo</th>
            <th>Data Devolução</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Livro.Titulo</td>
                <td>@e.Usuario.Nome</td>
                <td>@e.DataEmprestimo.ToShortDateString()</td>
                <td>@(e.DataDevolucao?.ToShortDateString() ?? "Em aberto")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@e.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@e.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Adicionar" class="btn btn-success">Novo Empréstimo</a>
