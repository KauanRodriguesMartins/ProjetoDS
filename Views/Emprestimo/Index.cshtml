@model List<EmprestimoModel>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">Empréstimos</h1>
        <a asp-action="Adicionar" class="btn btn-success">Novo Empréstimo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm bg-white rounded">
            <thead class="table-light">
                <tr>
                    <th>Livro</th>
                    <th>Usuário</th>
                    <th>Data Empréstimo</th>
                    <th>Data Devolução</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Livro.Titulo</td>
                        <td>@e.Usuario.Nome</td>
                        <td>@e.DataEmprestimo.ToShortDateString()</td>
                        <td>@(e.DataDevolucao?.ToShortDateString() ?? "Em aberto")</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@e.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                            <a asp-action="Excluir" asp-route-id="@e.Id" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
