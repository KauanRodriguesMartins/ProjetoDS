@model EmprestimoModel
@{
    ViewData["Title"] = "Editar Empréstimo";
}

<div class="container py-5" style="max-width: 700px;">
    <div class="text-center mb-4">
        <h1 class="display-4" style="font-family: 'Georgia', serif; color: #2c3e50;">Editar Empréstimo</h1>
    </div>

    <form class="p-4 rounded shadow" asp-action="Atualizar" method="post" style="background-color: #e8d5b7;">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Livro</label>
            <select asp-for="LivroId" class="form-control">
                @foreach (var livro in ViewBag.Livros)
                {
                    <option value="@livro.Id">@livro.Titulo</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Usuário</label>
            <select asp-for="UsuarioId" class="form-control">
                @foreach (var usuario in ViewBag.Usuarios)
                {
                    <option value="@usuario.Id">@usuario.Nome</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Data do Empréstimo</label>
            <input type="date" asp-for="DataEmprestimo" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label" style="font-weight:bold; color:#4d3d2f;">Data de Devolução</label>
            <input type="date" asp-for="DataDevolucao" class="form-control" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn" style="background-color: #2c3e50; color: #fdf6e3;">Atualizar</button>
            <a asp-action="Index" class="btn" style="background-color: #800000; color: #fdf6e3;">Voltar</a>
        </div>
    </form>
</div>
